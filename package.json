{
  "name": "image-butler",
  "version": "0.0.9",
  "description": "",
  "engine": {
    "node": "6.10.2"
  },
  "files": [
    "build",
    "graphicsmagick"
  ],
  "scripts": {
    "config": "babel-node ./scripts/config.js",
    "create": "npm-run-all transpile create:lambda create:hooks:jpg create:hooks:jpeg create:hooks:png create:hooks:gif",
    "update": "npm-run-all transpile update:lambda",
    "destroy": "claudia destroy --profile default",
    "create:lambda": "better-npm-run create:lambda",
    "create:hooks:jpg": "better-npm-run create:hooks:jpg",
    "create:hooks:jpeg": "better-npm-run create:hooks:jpeg",
    "create:hooks:png": "better-npm-run create:hooks:png",
    "create:hooks:gif": "better-npm-run create:hooks:gif",
    "transpile": "babel src --out-dir build",
    "update:lambda": "claudia update --profile default --no-optional-dependencies --handler build/index.handler",
    "prettier": "prettier --write '{test,src}/**/*.js'",
    "pretest": "npm run prettier",
    "precommit": "lint-staged",
    "test": "ava"
  },
  "betterScripts": {
    "create:lambda": {
      "command": "claudia create --profile default --region $IB_REGION --handler build/index.handler --no-optional-dependencies --timeout $IB_TIMEOUT --memory $IB_MEMORY --set-env IB_BUCKET=$IB_BUCKET,IB_SECRET=$IB_SECRET"
    },
    "create:hooks:jpg": {
      "command": "claudia add-s3-event-source --profile default --bucket $IB_BUCKET --events s3:ObjectCreated:* --prefix uploads/ --suffix .jpg"
    },
    "create:hooks:jpeg": {
      "command": "claudia add-s3-event-source --profile default --bucket $IB_BUCKET --events s3:ObjectCreated:* --prefix uploads/ --suffix .jpeg"
    },
    "create:hooks:png": {
      "command": "claudia add-s3-event-source --profile default --bucket $IB_BUCKET --events s3:ObjectCreated:* --prefix uploads/ --suffix .png"
    },
    "create:hooks:gif": {
      "command": "claudia add-s3-event-source --profile default --bucket $IB_BUCKET --events s3:ObjectCreated:* --prefix uploads/ --suffix .gif"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:justintanner/image-butler.git"
  },
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/justintanner/image-butler",
  "devDependencies": {
    "app-root-path": "^2.0.1",
    "ava": "^0.22.0",
    "babel-eslint": "^7.2.3",
    "better-npm-run": "^0.1.0",
    "claudia": "^2.14.1",
    "dotenv": "^4.0.0",
    "eslint": "^4.1.1",
    "eslint-plugin-prettier": "^2.1.2",
    "lambda-tester": "^3.0.2",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.5.3",
    "sinon": "^2.3.8"
  },
  "dependencies": {
    "aws-sdk": "^2.82.0",
    "babel-cli": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-register": "^6.24.1",
    "crypto": "^1.0.1",
    "gm": "^1.23.0",
    "request": "^2.81.0",
    "underscore": "^1.8.3"
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "source": [
      "src/**/*.{js}"
    ],
    "concurrency": 5,
    "failFast": false,
    "tap": false,
    "powerAssert": false,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
